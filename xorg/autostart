#!/bin/sh
#
# http://mitchweaver/bin
#
# my autostart script for dwm
#

(rm -rf ${HOME}/.cache/font-config &)

background ~/var/tmp/wall &

xrdb load ${HOME}/etc/Xresources
xmodmap ${HOME}/etc/Xmodmap
xset +fp ${HOME}/usr/fonts
xset m 0 0
xset b off

bright 100
vol -dec 100
caps

! pgrep -x bar        && bar                    &
! pgrep -x composit   && composit               &
! pgrep -x sxhkd      && sxhkd -c ~/etc/sxhkdrc &
! pgrep -x clip       && clip --daemon          &
! pgrep -x batmon     && batmon                 &
! pgrep -x dunst      && dunst                  &
! pgrep -x xbanish    && xbanish                &
! pgrep -x pulseaudio && pulseaudio             &
! pgrep -x dropbox    && dropbox                &
# ! pgrep -x redsfhift  && redshift               &
