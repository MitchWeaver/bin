#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# tiny xdg-open clone, because xdg sucks
#

[ $# -eq 0 ] && read inp && set "$inp"

image() { feh -N -Z -s -q -. -^ feh "$@" ; }
video() {
    mpv --really-quiet --title=mpv \
        --input-ipc-server=/tmp/mpvsocket "$source" "$@" &
}
edit() {
    if [ -t 0 ] ; then
        ${EDITOR:=vi} "$1"
    else
        st -e ${EDITOR:=vi} "$1" &
    fi
}

if [ -f "$1" ] ; then
    case ${1##*.} in
        jpg|png|jpeg) image "$1" ;;
        mp4|webm|gif) video "$1" ;;
        mp3|flac|ogg|opus) video --no-video "$1" ;;
        pdf|epub) mupdf "$1" & ;;
        gz|bz2|xz|zip) unpack "$1" ;;
        docx) libreoffice "$1" ;;
        *) edit "$1"
    esac
fi
