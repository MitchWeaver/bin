#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# a tiny temporary notepad system
#

mkdir -p /tmp/pad
: ${EDITOR:=vi}
type st >/dev/null && term=st || term=xterm

usage() {
cat << EOF
$(basename $0) - a tiny note system

commands:
-----------
-r  -  reopen last pad
-u  -  upload pad to ix.io
-s  -  save last pad to ~/
-c  -  cat out the last pad
EOF
}

edit() {
    if [ -t 0 ] ; then
        ${EDITOR:=vi} $1
    else
        $term -e ${EDITOR:=vi} $1 &
    fi
}

upload() {
    set -- $(curl -sF "f:1=</tmp/pad/last_pad" ix.io)
    echo "$1" | xsel -ip
    echo "$1" | xsel -is
    echo "$1" | xsel -ib
    echo "$1"
}

if [ "$1" ] ; then
    cpad() { cat /tmp/pad/last_pad ; }
    case $1 in
        -r) edit $(cpad) ;;
        -u) upload ;;
        -s) cp -f $(cpad) "${HOME}/$(date '+%a %b %d - %I:%M %p').pad" ;;
        -c) cat $(cpad) ;;
        *)  usage
    esac
else
    pad=/tmp/pad/$$.pad
    echo $pad >/tmp/pad/last_pad
    edit $pad
fi
