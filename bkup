#!/bin/sh -e
#
# http://github.com/mitchweaver/bin
#
# local backup to my pi
#

rsync='rsync -rtvuh --progress --delete --partial'
remote_drive=pi:/mnt/500GB_1

cd ${HOME}
# for dir in bks emu fil img mus src ; do
for dir in $@ ; do
    if [ -L $dir ] || [ ! -d $dir ] ; then
        continue
    fi
    $rsync $dir/ $remote_drive/$dir
done
