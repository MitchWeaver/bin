#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# brightness wrapper
#

usage() { >&2 echo 'Usage: bright [-i] [-d] [-s]' ; exit 1 ; }

case $1 in
    *i) xbacklight -inc ${2:-5} ;;
    *d) xbacklight -dec ${2:-5} ;;
    *s) xbacklight -set $2 2>/dev/null ;;
    *h) usage
esac

b=$(xbacklight -get)
printf '%s%%\n' "${b%.*}"
