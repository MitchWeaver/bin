#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# play a given directory with mpv and display album art.
#

usage() { >&2 echo "./play [-r] [-l] <path>" ; exit 1 ; }

while [ "$1" ] ; do
    case $1 in
        -h) usage ;;
        -r) MPV_OPTS="$MPV_OPTS --shuffle" ; shift ;;
        -l) MPV_OPTS="$MPV_OPTS --loop"    ; shift ;;
         *) path=$* ; break
    esac
done

[ -e "$path" ] || exit 1

set -- $(dimensions)
w=$(( $1 / 4 ))

pkill -x mpv
nohup mpv $MPV_OPTS \
    --really-quiet \
    --no-video \
    --input-ipc-server=/tmp/mpvsocket \
    --title=mpv \
    "$path" >/dev/null &

nohup feh -Z -q \
    --stretch \
    --ignore-aspect \
    --auto-rotate \
    --title feh \
    --scale-down \
    -g ${w}x${w} \
    "$path"/ >/dev/null &
