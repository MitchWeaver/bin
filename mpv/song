#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# nicely display current song from mmt (Mitch's MPV Tool)
#

artist=$(mmt -k artist)
title=$(mmt -k title)

if [ "$artist" ] && [ "$title" ] ; then
    printf '%s - %s\n' "$artist" "$title"
else
    mmt -k filename
fi

