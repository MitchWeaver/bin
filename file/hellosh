#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# create a POSIX sh hello world skeleton
#

[ "$1" ] || set hello.sh

cat >"$1"<<"EOF"
#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# [generated by hellosh]
#

usage() {
    >&2 printf '%s\n' "Usage: $(basename "$0") [] [] []"
    exit 1
}

case $1 in
    -h) usage ;;
     *) ;;
esac

printf '%s\n' hi
EOF

chmod +x "$1"
