#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# return network SSID
#

case $(uname) in
    Linux)
        iwconfig | grep -oE 'ESSID:*.*"' | \
            sed -e 's/ESSID://' -e 's/"//g'
        ;;
    OpenBSD)
        for int in em0 urtwn0 iwn0 ; do
            case $(ifconfig $int) in
                *active*)
                    case $int in
                        em0)
                            echo Wired
                            ;;
                        *)
                            ifconfig $int | grep nwid | \
                                sed -e 's/.*nwid*.//' -e 's/ chan.*.//'
                    esac
                    break
            esac
        done
esac 2>/dev/null
