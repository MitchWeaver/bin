#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# get wifi ssid from ifconfig
#

case $(uname) in
    Linux)
        iwconfig | grep -oE 'ESSID:*.*"' | \
            sed -e 's/ESSID://' -e 's/"//g'
        ;;
    OpenBSD)
        if ifconfig em0 | grep active >/dev/null ; then
            echo Wired
        elif ifconfig iwn0 | grep active >/dev/null ; then
            ifconfig iwn0 | grep nwid | \
                sed -e 's/.*nwid*.//' -e 's/ chan.*.//'
        fi
esac 2>/dev/null
