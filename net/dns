#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# returns a random dns server from
# my preferred providers
#

# dns.watch
# --- 84.200.69.80
# --- 84.200.70.40
# freedns.zone
# --- 172.104.237.57
# --- 172.104.49.100
# --- 37.235.1.174
# --- 37.235.1.177
# --- 45.33.97.5

for ip in \
    84.200.69.80 \
    84.200.70.40 \
    172.104.237.57 \
    172.104.49.100 \
    37.235.1.174 \
    37.235.1.177 \
    45.33.97.5
do \
    echo $ip
done | sort -R | head -n 1
