#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# open and edit a file from given locations with dmenu
#

# -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*
folders=\
"""
${HOME}/bin
${HOME}/fil
${HOME}/fil/hmw
${HOME}/fil/notes
${HOME}/src/dots
${HOME}/src/dots/ranger
"""
# -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*

sel=\
$(\
    for f in $folders ; do
        # ls -L "$f"
        find -L "$f" -type f -mindepth 1 -maxdepth 1 ! -name ".*"
    done | sed 's/.*\///g' | sort -u | menu -p 'Edit:'\
)

[ "$sel" ] &&
for f in $folders ; do
    if [ -e "$f/$sel" ] ; then
        opn "$f/$sel"
        exit 0
    fi
    ##### exec st -e $EDITOR "$f/$sel"
done
exit 1
