#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# bar for dwm on OpenBSD
#

space() {
    printf '%s' ' '
}

separator() {
    printf '%s' ' / '
}

print_info() {
    get_crypto
    separator
    get_vpn
    separator
    get_bat
    separator
    get_vol
    separator
    get_date
    space
}

get_date() {
    printf '%s' "$(date "+%a %d %I:%M %p")"
}

get_vol() {
    v=$(vol)
    case ${v%?} in
        [7-9]|10) e='' ;;
        [2-6]) e='' ;;
            *) e=''
    esac
    printf "$e %s%%" "$v"
}

get_bat() {
    p=$(apm -l)
    case $(apm -a) in
        1)
            e=''
            ;;
        0)
            case ${p%?} in
                [8-9]|10) e='  ' ;;
                [6-7]) e='  ' ;;
                [3-5]) e='  ' ;;
                [1-2]) e='  ' ;;
                    *) e='  '
            esac
    esac
    printf "$e %s%%" "$p"
}


get_vpn() {
    loc=$(piavpn -g)
    if [ "$loc" ] ; then
        printf '%s' " $loc"
    else
        printf '%s' "  None"
    fi
}

get_crypto() {
    if [ -d "${XDG_CACHE_HOME:-${HOME}/.cache}/crypto-ticker" ] ; then
        read -r btc < "${XDG_CACHE_HOME:-${HOME}/.cache}/crypto-ticker"/btc
        printf ' %s' "$btc"
        # read -r eth < "${XDG_CACHE_HOME:-${HOME}/.cache}/crypto-ticker"/eth
        # read -r xmr < "${XDG_CACHE_HOME:-${HOME}/.cache}/crypto-ticker"/xmr
        # printf ' %s ETH %s' "$btc" "$eth"
        # printf ' %s  ﵃  %s' "$btc" "$xmr"
    fi
}

quit() {
    if [ -f "${XDG_CACHE_HOME:-~/.cache}/bar_pid" ] ; then
        read -r pid < "${XDG_CACHE_HOME:-~/.cache}/bar_pid"
        kill "$pid"
    fi
}

start() {
    trap 'xsetroot -name killed ; exit' INT TERM
    echo $$ > "${XDG_CACHE_HOME:-~/.cache}/bar_pid"
    while sleep 1 ; do
        xsetroot -name "$(print_info)"
    done
}

main() {
    pgrep dwm >/dev/null || exit 1

    case $1 in
        -d)
            start
            ;;
        -q)
            quit
            ;;
        -r)
            quit
            start
            ;;
        *)
            print_info
    esac
}

main "$@"

